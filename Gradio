import gradio as gr

# Step 1: Create a class
class Book:
    def __init__(self, name, marks1, marks2, percentage):
        self.name = name
        self.marks1 = marks1
        self.marks2 = marks2
        self.percentage = percentage

# Step 2: Function to use the class
def create_book(name, marks1, marks2, percentage):
    book1 = Book(name, marks1, marks2, percentage)
    return f"Name: {book1.name}\nMarks1: {book1.marks1}\nMarks2: {book1.marks2}\nPercentage: {book1.percentage}%"

# Step 3: Gradio Interface
app = gr.Interface(
    fn=create_book,
    inputs=[
        gr.Textbox(label="Enter name"),
        gr.Textbox(label="Enter Marks1"),
        gr.Textbox(label="Enter Marks2"),
        gr.Textbox(label="Enter Percentage")
    ],
    outputs=gr.Textbox(label="Student Details"),
    title="The Details of the Student",
    description="Enter book name and marks to see details using class & object"
)

# Step 4: Launch app
app.launch()
